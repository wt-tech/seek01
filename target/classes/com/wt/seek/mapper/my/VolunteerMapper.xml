<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- namespace指向mapper接口 -->
<mapper namespace="com.wt.seek.dao.my.IVolunteerMapper">

	<resultMap type="com.wt.seek.entity.Volunteer"
		id="volunteer">
		<id column="id" property="id" />
		<result column="customer_name" property="customerName" />
		<result column="identityNO" property="identityNO" />
		<result column="sequence" property="sequence" />
		<result column="negative_identity_url"
			property="negativeIdentityUrl" />
		<result column="positive_identity_url"
			property="positiveIdentityUrl" />
		<result column="address" property="address" />
		<result column="tel" property="tel" />
		<result column="vol_result" property="volResult" />

		<association javaType="com.wt.seek.entity.Customer"
			property="customer">
			<result column="nickname" property="nickname" />
		</association>

	</resultMap>

	<select id="listVolunteer" resultMap="volunteer">
		SELECT
		volunteer.id,sequence,nickname,customer_name,identityNO,negative_identity_url,positive_identity_url,address,volunteer.tel,vol_result
		FROM volunteer LEFT JOIN customer ON
		volunteer.customer_id=customer.id
		ORDER BY volunteer.id desc
		LIMIT
		${(currentPageNo-1)*pageSize},${pageSize}
	</select>

	<select id="getVolunteer" resultType="Volunteer">
		select * from
		volunteer
		where customer_id=#{customerId};
	</select>
	
	<select id="getVolunteerByIDAndName" resultType="Volunteer">
		select * from
		volunteer
		where customer_name=#{realName} AND identityNO = #{ID};
	</select>
	
	<select id="getBackVolunteer" resultType="Volunteer">
		select * from
		volunteer
		where id=#{id};
	</select>

	<update id="updateVolunteer" parameterType="Volunteer">
		update
		volunteer
		<set>
			<if test="customerName != null">
				customer_name=#{customerName},
			</if>
			<if test="sequence != null">
				sequence=#{sequence},
			</if>
			<if test="identityNO != null">
				identityNO=#{identityNO},
			</if>
			<if test="negativeIdentityUrl != null">
				negative_identity_url=#{negativeIdentityUrl},
			</if>
			<if test="positiveIdentityUrl != null">
				positive_identity_url=#{positiveIdentityUrl},
			</if>
			<if test="address != null">
				address=#{address},
			</if>
			<if test="tel != null">
				tel=#{tel},
			</if>
			<if test="volResult != null">
				vol_result=#{volResult}
			</if>
		</set>
		where id=#{id};
	</update>

	<insert id="saveVolunteer" useGeneratedKeys="true"
		keyProperty="id" parameterType="Volunteer">
		insert into volunteer
		(customer_id,customer_name,identityNO,address,tel,sequence)
		values(#{customer.id},#{customerName},#{identityNO},#{address},#{tel},#{sequence});

	</insert>
    
    <insert id="saveVolunteerAddress">
		insert into volunteer_areas
		(volunteer_id,province_id,city_id,county_id)
		values
    	<foreach collection="volunteers" item="volunteer" separator=",">
		     (#{volunteer.id},#{volunteer.volunteerarea.provinceId},#{volunteer.volunteerarea.cityId},#{volunteer.volunteerarea.countyId})
		</foreach>
	</insert>
	
	<select id="countVolunteer" resultType="Integer">
		SELECT COUNT(*) FROM
		volunteer;
	</select>
	
	<select id="listVolunteerAreaById" resultType="VolunteerArea">
		SELECT volunteer_areas.id,province_name,city_name,county_name FROM 
		volunteer_areas
		LEFT JOIN province ON province.id=volunteer_areas.province_id
		LEFT JOIN city ON city.id=volunteer_areas.city_id
		LEFT JOIN county ON county.id=volunteer_areas.county_id
		WHERE volunteer_id=#{volunteerId}
	</select>
	
	<delete id="deleteVolunteerArea">
	    delete from volunteer_areas
   		<foreach collection="ids" item="id" open="where id in(" close=")" separator=",">
   		#{id}
   		</foreach>
	</delete>
	
	<select id="getVolunteerCustomerId" resultType="Integer">
		SELECT
		customer_id FROM volunteer
		LEFT JOIN
		login_volunteer ON
		login_volunteer.volunteer_id=volunteer.id
		WHERE
		login_id=#{loginId}
	</select>
</mapper>